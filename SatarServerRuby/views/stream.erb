<div class="row">
	<div class="col12">
		<h1>Events</h1>
		<div class="block fscroll">
			<table>
				<thead>
					<tr>
						<th>event</th>
					</tr>
				</thead>
				<tbody id="events">
				</tbody>
			</table>		
		</div>
	</div>
</div>
<div class="row">
	<div class="col4">
		<h1>Settings</h1>
		<div class="block">
			<select id="single">
    			<option>all</option>
    			<option>start</option>
    			<option>finish</option>
			</select>
		</div>
	</div>
</div>

<script>
	// reading
	var es = new EventSource('/api/stream/event');
	es.onmessage = function(e) {
		var data = e.data.split(';')
		var value = $("#single").val();
		if (value == 'all')
		{
			logToTable(data[1] + ' from node ' + data[0]);
		}
		else if(value == 'start' && data[0] == '1')
		{
			logToTable(data[1]);
		}
		else if(value == 'finish' && data[0] == '2')
		{
			logToTable(data[1]);
		}
	};
</script>